<UserControl x:Class="AudioWolfUI.UserControls.SoundListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AudioWolfUI.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" Height="32" Background="#FFCDBEBE">
    <Grid>
        <TextBox x:Name="_labelName" Text="{Binding Title,
                        Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}" Height="33" Margin="0,2,186,-3" VerticalAlignment="Top" />
        <Button Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="43" Margin="515,2,0,0" Click="Button_Click_Play" />
        <Button Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="43" Margin="571,0,0,0" Click="Button_Click_Remove" />
    </Grid>
</UserControl>
